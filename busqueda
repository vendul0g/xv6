  if(argc < 2){
    printf(2, "Usage: mkdir files...\n");
    exit(NULL);
  }

  for(i = 1; i < argc; i++){
    if(mkdir(argv[i]) < 0){
      printf(2, "mkdir: %s failed to create\n", argv[i]);
      break;
    }
  }

  exit(NULL);
}
